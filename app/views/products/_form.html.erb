<%= form_with(model: product, local:true) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, size: "50x10" %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :enabled, style: 'display: block'%>
    <%= form.check_box :enabled%>
  </div>

  <div>
    <%= form.label :discount_price, style: "display: block" %>
    <%= form.text_field :discount_price %>
  </div>

  <div>
    <%= form.label :permalink, style: "display: block" %>
    <%= form.text_field :permalink %>
  </div>
  <div>
    <%= form.label :category_id, style: 'display: block' %>
    <%= form.select :category_id, ([[['Select one', nil]]] << Category.all.collect { |c| [c.name, c.id] }).flatten(1) %>
  </div>
  <br>
  <div>
    <%= form.label :product_image %>
    <%= form.file_field :product_image, multiple: true %>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
