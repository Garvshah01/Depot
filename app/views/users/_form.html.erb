<div class="depot_form">

  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2>Enter User Details</h2>
    <div class="field">
      <%= form.label :name, "#{t('.name')}:" %>
      <%= form.text_field :name, size: 40 %>
    </div>

    <div class="field">
      <%= form.label :email, 'Email:' %>
      <%= form.text_field :email, size: 40 %>
    </div>

    <div class="field">
      <%= form.label :password, 'Password:' %>
      <%= form.password_field :password, size: 40 %>
    </div>
    <div class="field">
      <%= form.label :password_confirmation, 'Confirm:' %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, size: 40 %>
    </div>
    <%= form.fields_for :address do |user_address| %>
    <div class="field">
      <%= user_address.label :city, "#{t('.city')}:" %>
      <%= user_address.text_field :city, size: 40 %>
    </div>
    <div class="field">
      <%= user_address.label :state, 'State:' %>
      <%= user_address.text_field :state, size: 40 %>
    </div>
    <div class="field">
      <%= user_address.label :country, 'Country:' %>
      <%= user_address.text_field :country, size: 40 %>
    </div>
    <div class="field">
      <%= user_address.label :pincode, 'Pincode:' %>
      <%= user_address.text_field :pincode, size: 40 %>
    </div>
    <% end %>
    <div>
      <%= form.submit %>
    </div>
  <% end %>

</div>
