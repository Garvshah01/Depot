<h1>Orders</h1>
<p style="color: green"><%= notice %></p>

<%@order.each do |order|%>
<div id="<%= dom_id order %>">
  <p>
    <strong>Name:</strong>
    <%= order.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= order.address %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= order.email %>
  </p>

  <p>
    <strong>Pay type:</strong>
    <%= order.pay_type %>
  </p>

  <p>
    <strong> Items </strong><br>
    <% order.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %></td>
      <td><%= item.product.title %></td>
      <td><%= number_to_currency(item.total_price) %></td><br>
    </tr>
    <% end %>
  </p>

  <p>
    <strong>Total amount: </strong>
    <%= number_to_currency(order.total_price)%>
  </p>
  <br>
</div>

<%end%>
